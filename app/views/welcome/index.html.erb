<header class='navbar hero-unit'>
    <h2>Kay Choi</h2>
</header>

<div class='container'>

<table class='table hero-unit'>
    <thead>
        <tr>
            <th>Project Name</th>
            <th>Description</th>
            <th>URL</th>
        </tr>
    </thead>

    <tbody>
    <% PROJECTS.each do |project,details| %>
        <tr>
            <td><%= project %></td>
            <td><%= details['description'] %></td>
            <td><%= link_to details['url'], details['url'] %></td>
        </tr>
    <% end %>
    </tbody>
</table>

</div>
